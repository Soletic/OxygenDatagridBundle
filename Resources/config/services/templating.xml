<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="oxygen_datagrid.templating.class">Oxygen\DatagridBundle\Templating\GridTemplating</parameter>
        <parameter key="oxygen_datagrid.default_configurator.class">Oxygen\DatagridBundle\Grid\Configuration\GridConfigurator</parameter>
        <parameter key="oxygen_datagrid.default_configurator.configuration">Oxygen\DatagridBundle\Grid\Configuration\GridMinimalConfiguration</parameter>
    </parameters>

    <services>
    	<service id="oxygen_datagrid.default_configurator" class="%oxygen_datagrid.default_configurator.class%">
    		<argument>%oxygen_datagrid.default_configurator.configuration%</argument>
        </service>
        <service id="oxygen_datagrid.templating" class="%oxygen_datagrid.templating.class%" scope="prototype">
            <argument type="service" id="grid" />
            <argument type="service" id="oxygen_framework.entities" />
            <argument type="service" id="oxygen_datagrid.default_configurator" />
        </service>
    </services>
    
</container>
